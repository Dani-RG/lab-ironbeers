<div class="card">
    <img
        class="card-img-top"
        src="{{this.image_url}}"
        alt="{{this.name}}"
    />
    <div class="card-body">
        <h5 class="card-name">{{this.name}}</h5>
        <p class="card-description">{{this.description}}</p>
        <p class="card-tagline">{{this.tagline}}</p>
        <p class="card-food-pairing">
            Food pairing: {{this.food_pairing}}
        </p>
        <p class="card-brewer-tips">
            Brewers tips: {{this.brewers_tips}}
        </p>
    </div>
</div>